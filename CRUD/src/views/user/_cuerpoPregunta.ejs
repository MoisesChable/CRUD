<% include _header %>
<% 
%>
<div class="container"><br>
    <div class="row">
    <center>
        <div>
          <div class="cronometro">
             <div id="hms"></div>
             <div class="boton start"></div>        
             <div class="boton stop"></div>
             <div class="boton reiniciar"></div>
          </div>
        </div>
        <div class="col m12">
        <h2 class="white-text textPregunta"><%= datos.question%></h2> <br>
        </div>
        <div class="col m6">
         <h4 class="btn btn-large green darken-5 boton-opciones"><%='A. '+datos.answer1%></h4>
        </div>
        <div class="col m6">
         <h4 class="btn btn-large green darken-5 boton-opciones"><%='B. '+datos.answer2%></h4>
        </div>
        <div class="col m6">
         <h4 class="btn btn-large green darken-5 boton-opciones"><%='C. '+datos.answer3%></h4>
        </div>
        <div class="col m6">
         <h4 class="btn btn-large green darken-5 boton-opciones"><%='D. '+datos.answer4%></h4>
        </div>
        
        <p>Respuesta: <%=datos.resp%></p>
         <p>Referencia: <%=datos.ref%></p>

         <% if(totalPreguntas==numero){%>
           <a href="/finish" class="btn btn-outline-light btn-lg">Siguiente</a>
         <%}else{%>
         <a href="/pregunta/<%= numero %>" class="btn btn-outline-light btn-lg">Siguiente</a>
         <%}%>

           
        </div>
        </center>
    </div>
</div>
<% include _footer %>