<% include _header %>

<div class="container"><br>
    <div class="row">
    <center>
        <div>
           <h3 id="cronometro" class="textCronometro">15</h3>
      </div>
        <div  class="col m12">
        <h2 class="white-text textPregunta"><%= datos.question%></h2> <br>
        </div>
        <div  class="col m6">
         <h4 id="respuesta1" class="btn btn-large green darken-5 boton-opciones"><%='A. '+datos.answer1%></h4>
        </div>
        <div  class="col m6">
         <h4 id="respuesta2" class="btn btn-large green darken-5 boton-opciones"><%='B. '+datos.answer2%></h4>
        </div>
        <div class="col m6">
         <h4 id="respuesta3" class="btn btn-large green darken-5 boton-opciones"><%='C. '+datos.answer3%></h4>
        </div>
        <div class="col m6">
         <h4  id="respuesta4" class="btn btn-large green darken-5 boton-opciones"><%='D. '+datos.answer4%></h4>
        </div>
        <div id="respuesta"   class="col m12 respuesta"><br>
        <h5 ><%=datos.resp%>, <%=datos.ref%></h5><br>
        
         <% if(totalPreguntas==numero){%>
        <a  href="/finish" class="btn btn-outline-light btn-large pulse">Siguiente</a>
         <%}else{%>
         <a  href="/pregunta/<%= numero %>" class="btn btn-outline-light btn-large pulse">Siguiente</a>
         <%}%>
        <div>
           
        </div>
        </center>
    </div>
</div>
<script type="text/javascript">
    var tiempo = 14 ;
    var boxTiempo = document.getElementById("cronometro");
    var boxRespuesta = document.getElementById("respuesta");
    var opcionRespuesta = "respuesta"+<%= datos.is %>;
    var opcionRespuestaCorrecta = document.getElementById(opcionRespuesta);

    
    var funCrono = setInterval(function () {
               boxTiempo.innerHTML = tiempo ;
                if (tiempo == 5) {
                   boxTiempo.style.color="red";
                }
                if (tiempo == 0) {
                  detenerCrono(); 
                }
                tiempo--;
            }, 1000);

    function detenerCrono(){
        clearInterval(funCrono);
        opcionRespuestaCorrecta.classList.remove('green');
        opcionRespuestaCorrecta.classList.add('red');
        boxRespuesta.style.display="block";
    }

</script>
<% include _footer %>