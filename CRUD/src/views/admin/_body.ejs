<div class="container"><br>
    <div class="row">
        <div class="col-xl-12">
            <table class="table table-striped">
                <!--cabecera-->
               <thead>
                   <tr>
                       <th>#</th>
                       <th>Pregunta</th>
                       <th style="width: 220px;">Opciones</th>
                       <th># Resp.</th>
                       <th>Comentarios</th>
                       <th>Cita Biblica</th>
                       <th>Opciones</th>
                    </tr>
               </thead>
               <tbody>            
                <% for(var i=0;i<datos.length; i++) {%>
                    <tr>
                        <td><%= i + 1 %></td>
                        <td><%=datos[i].question%></td>
                        <td>
                          <% if(datos[i].answer1){ %>
                          <%='1. '+datos[i].answer1 %>
                          <% } %>
                          <br>
                          <% if(datos[i].answer2){ %>
                          <%='2. '+ datos[i].answer2%>
                          <% } %>
                          <br>
                          <% if(datos[i].answer3){ %>
                          <%='3. '+ datos[i].answer3%>
                          <% } %>
                          <br>
                          <% if(datos[i].answer4){ %>
                          <%='4. '+ datos[i].answer4%>
                          <% } %>
                        </td>
                        <td><%= datos[i].is%></td>
                        <td><%= datos[i].resp%></td>
                        <td><%= datos[i].ref%></td>
                       <td> <a  href="/edit/<%= datos[i]._id %>" class="btn btn-warning" style="    margin-bottom: .4rem;width: 35px;"><i class="fa fa-edit"></i></a><br><!-- </td>
                       <td> -->
                        <a data-toggle="modal" data-target="#exampleModal" onclick="delet('<%= datos[i].question %>','<%= datos[i].id %>');" class="btn btn-danger" style="margin-bottom: .4rem;width: 35px;"><i class="fa fa-trash-alt"></i></a></td>
                    </tr>
                <% } %>
               </tbody>
            </table>
        </div>
    </div>
</div>

<script type="text/javascript">
  function delet(question,id){
    document.getElementById("dataQuestion").innerHTML=question;
    var idQuestion = '/delete/'+id ;
    var enlace = document.getElementById("deleteQuestion");
    enlace.href = idQuestion;
  }
</script>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Eliminar pregunta</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
       <strong>Â¿Estas seguro que deseas eliminar la siguiente pregunta?</strong><br><br>
       <p id="dataQuestion"><p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
        <a id ="deleteQuestion" type="button" class="btn btn-danger" >Eliminar</a>
      </div>
    </div>
  </div>
</div>

